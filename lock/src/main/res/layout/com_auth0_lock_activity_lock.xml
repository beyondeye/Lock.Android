<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/com_auth0_lock_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.auth0.android.lock.views.HeaderView
        android:id="@+id/com_auth0_lock_header"
        style="@style/Lock.Theme.Widget.Header"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="false" />

    <TextView
        android:id="@+id/com_auth0_lock_result_message"
        style="@style/Lock.Theme.Text.ResultMessage"
        android:fitsSystemWindows="false"
        android:visibility="gone"
        tools:text="There was an error"
        tools:visibility="visible" />

    <RelativeLayout
        android:id="@+id/com_auth0_lock_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/com_auth0_lock_header"
        android:fitsSystemWindows="false" />

</RelativeLayout>